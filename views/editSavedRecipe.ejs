  <!-- Add your header here -->
  <!-- Example: -->
  <header>
    <h1>Edit Saved Recipe</h1>
    <!-- Add navigation or other header content -->
  </header>

  <main>
    <!-- Your form for editing the saved recipe -->
    <form action="/updateSavedRecipe" method="post">
      <!-- You can use the same structure as in your savedRecipes.ejs page -->
      <!-- Include input fields for Title, Instructions, Ingredients, etc. -->
      <label for="editTitle">Title:</label>
      <input type="text" id="editTitle" name="editTitle" required />
      
      <label for="editInstructions">Instructions:</label>
      <textarea id="editInstructions" name="editInstructions" required></textarea>
      
      <label for="editIngredients">Ingredients:</label>
      <textarea id="editIngredients" name="editIngredients" required></textarea>

      <!-- Add other input fields and buttons as needed -->

      <button type="submit">Save Changes</button>
    </form>
  </main>

  <!-- Add your footer here -->
